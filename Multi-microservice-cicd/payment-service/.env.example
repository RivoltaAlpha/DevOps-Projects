# Application
NODE_ENV=development
PORT=3003
SERVICE_NAME=payment-service
APP_VERSION=1.0.0
LOG_LEVEL=info

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=payments_db
DB_USER=admin
DB_PASSWORD=password

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Service URLs (for inter-service communication)
USER_SERVICE_URL=http://user-service:3001
ORDER_SERVICE_URL=http://order-service:3002

# Message Queue (RabbitMQ)
RABBITMQ_URL=amqp://admin:password@rabbitmq:5672
RABBITMQ_EXCHANGE=payments
RABBITMQ_QUEUE=payment.confirmed

# Payment Gateway (Stripe/PayPal example)
PAYMENT_GATEWAY_API_KEY=your-api-key-here
PAYMENT_GATEWAY_SECRET=your-secret-here
PAYMENT_GATEWAY_URL=https://api.stripe.com

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9092
